<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".editor">

    <ImageView
        android:id="@+id/toolbar"
        android:layout_width="411dp"
        android:layout_height="46dp"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="28dp"
        android:scaleType="centerInside"
        android:scaleX="2.25"
        android:scaleY="1.28"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textV"
        app:srcCompat="@drawable/lgthgray" />

    <ImageView
        android:id="@+id/titleView"
        android:layout_width="407dp"
        android:layout_height="82dp"
        android:layout_marginTop="56dp"
        android:scaleType="centerInside"
        android:scaleX="1.28"
        android:scaleY="1.15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lgthgray" />

    <EditText
        android:id="@+id/titleText"
        style="@style/Widget.Material3.AutoCompleteTextView.FilledBox"
        android:layout_width="348dp"
        android:layout_height="51dp"
        android:ems="10"
        android:hint="Заголовок"
        android:inputType="text"
        android:paddingTop="10dp"
        android:singleLine="false"
        android:textColorHint="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/titleView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toStartOf="@+id/titleView"
        app:layout_constraintTop_toTopOf="@+id/titleView"
        app:layout_constraintVertical_bias="0.419" />

    <ImageView
        android:id="@+id/textV"
        android:layout_width="410dp"
        android:layout_height="461dp"
        android:layout_marginTop="32dp"
        android:scaleX="1.4"
        android:scaleY="1.12"
        app:layout_constraintBottom_toTopOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleView"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/gray" />

    <EditText
        android:id="@+id/MultiLineText"
        style="@style/Widget.Material3.AutoCompleteTextView.FilledBox"
        android:layout_width="318dp"
        android:layout_height="448dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="@+id/textV"
        app:layout_constraintEnd_toEndOf="@+id/textV"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textV"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="268dp"
        android:background="@null"
        android:tint="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:srcCompat="@android:drawable/ic_menu_save" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:tint="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toStartOf="@+id/save"
        app:layout_constraintHorizontal_bias="0.232"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:srcCompat="@android:drawable/ic_menu_revert" />

</androidx.constraintlayout.widget.ConstraintLayout>